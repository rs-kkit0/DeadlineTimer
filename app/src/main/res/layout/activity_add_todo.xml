<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTodoActivity">

    <TextView
            android:text="タイトル"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="簿記2級"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"/>
    <TextView
            android:text="期限"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deadLine" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/titleText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="2019年06月09日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deadLineTExt" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/deadLine" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"/>
    <TextView
            android:text="標準作業時間"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/standardTIme" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/deadLineTExt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="400時間"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/standardTimeText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/standardTIme" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"/>
    <TextView
            android:text="通知"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/standardTimeText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="毎日08:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notificationText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/notification" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"/>
</android.support.constraint.ConstraintLayout>